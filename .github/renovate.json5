{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["github>remal/renovate-config:global"],

  "git-submodules": {
    enabled: false, // This is in beta for now, so let's use Dependabot to update Git submodules
  },

  constraintsFiltering: "strict",
  // $$$sync-with-template-modifiable: constraints $$$
  constraints: {
    node: "^20.9999.9999",
  },
  force: {
    constraints: {
      node: "^20.9999.9999",
    },
  },
  // $$$sync-with-template-modifiable-end$$$

  packageRules: [
    {
      matchCategories: ["node"],
      enabled: false,
    },
    {
      matchPackageNames: ["@types/node", "@tsconfig/node**"],
      matchUpdateTypes: ["major", "replacement"],
      enabled: false,
    },
    {
      matchCategories: ["js"],
      matchPackageNames: ["renovate"],
      schedule: ["* 15-23 * * 6"]
    },
  ],
}
